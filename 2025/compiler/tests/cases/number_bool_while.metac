function main() {
  const result = solve()?
  log("Result: ${result}")
}

function stepsToZero(n: number): number {
  let steps = 0
  let current = n

  while current > 0 {
    current--
    steps++
  }

  return steps
}

function isSmall(v: number): bool {
  return v < 5
}

function solve(): number | error {
  const value = stepsToZero(3)

  if isSmall(value) {
    return value
  } else {
    return 0
  }
}
